---
interface Props {
	currentPath?: string;
}

const { currentPath } = Astro.props;
---

<nav>
	<div class="container-wide">
		<a href="/" class={currentPath === '/' ? 'active' : ''}>
			ホーム
		</a>
		<a href="/about" class={currentPath === '/about' ? 'active' : ''}>
			このサイトについて
		</a>
	</div>
</nav>

<style>
	nav {
		padding: 2rem 0 1rem;
		border-bottom: 1px solid var(--color-gray-200);
	}
	
	nav div {
		display: flex;
		gap: 2rem;
		align-items: center;
	}
	
	nav a {
		text-decoration: none;
		color: var(--color-gray-600);
		font-weight: 400;
		transition: color 0.2s ease;
		position: relative;
	}
	
	nav a:hover {
		color: var(--color-black);
	}
	
	nav a.active {
		color: var(--color-black);
		font-weight: 500;
	}
	
	nav a.active::after {
		content: '';
		position: absolute;
		bottom: -1rem;
		left: 0;
		right: 0;
		height: 1px;
		background-color: var(--color-black);
	}

	/* Mobile Navigation */
	@media (max-width: 768px) {
		nav {
			padding: 1.5rem 0 1rem;
		}
		
		nav div {
			flex-direction: column;
			gap: 1rem;
			align-items: flex-start;
		}
		
		nav a {
			padding: 0.5rem 0;
			min-height: 44px;
			display: flex;
			align-items: center;
			width: 100%;
		}
		
		nav a.active::after {
			bottom: 0;
		}
	}
</style>