---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	currentPath?: string;
}

const { title, currentPath } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navigation currentPath={currentPath} />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	/* Reset & Base */
	*, *::before, *::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	/* Color Palette - Minimal Monochrome */
	:root {
		--color-black: #000000;
		--color-white: #ffffff;
		--color-gray-50: #fafafa;
		--color-gray-100: #f5f5f5;
		--color-gray-200: #e5e5e5;
		--color-gray-400: #a3a3a3;
		--color-gray-600: #525252;
		--color-gray-900: #171717;
	}

	/* Typography */
	html {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
		line-height: 1.7;
		color: var(--color-gray-900);
		background-color: var(--color-white);
		font-size: clamp(16px, 4vw, 18px);
	}

	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	/* Headings */
	h1, h2, h3, h4, h5, h6 {
		line-height: 1.3;
		font-weight: 600;
		color: var(--color-black);
		margin-bottom: 0.5em;
	}

	h1 { font-size: 1.75rem; margin-bottom: 0.67em; }
	h2 { font-size: 1.5rem; margin-bottom: 0.75em; }
	h3 { font-size: 1.25rem; margin-bottom: 0.83em; }
	h4 { font-size: 1.125rem; margin-bottom: 1em; }
	h5 { font-size: 1rem; margin-bottom: 1.17em; }
	h6 { font-size: 0.875rem; margin-bottom: 1.33em; }

	/* Text Elements */
	p {
		margin-bottom: 1em;
		color: var(--color-gray-900);
	}

	/* Links */
	a {
		color: var(--color-black);
		text-decoration: underline;
		text-decoration-thickness: 1px;
		text-underline-offset: 0.2em;
		transition: all 0.2s ease;
	}

	a:hover {
		text-decoration-thickness: 2px;
	}

	/* Lists */
	ul, ol {
		margin-bottom: 1em;
		padding-left: 1.5em;
	}

	li {
		margin-bottom: 0.25em;
	}

	/* Content Container */
	.container {
		max-width: min(65ch, 100vw - 2rem);
		margin: 0 auto;
		padding: 0 1rem;
	}

	.container-wide {
		max-width: min(80ch, 100vw - 2rem);
		margin: 0 auto;
		padding: 0 1rem;
	}

	/* Mobile Responsive */
	@media (max-width: 768px) {
		.container {
			padding: 0 1.5rem;
		}
		
		.container-wide {
			padding: 0 1.5rem;
		}

		/* Smart heading sizes for mobile */
		h1 { font-size: 1.5rem; }
		h2 { font-size: 1.25rem; }
		h3 { font-size: 1.125rem; }
		h4 { font-size: 1rem; }
		h5 { font-size: 0.875rem; }
		h6 { font-size: 0.75rem; }
	}

	/* Main content flex grow */
	main {
		flex: 1;
	}

	/* Code blocks */
	pre, code {
		font-family: 'SF Mono', Consolas, 'Liberation Mono', Menlo, monospace;
		background-color: var(--color-gray-50);
		border: 1px solid var(--color-gray-200);
	}

	code {
		padding: 0.125em 0.25em;
		border-radius: 3px;
		font-size: 0.9em;
	}

	pre {
		padding: 1rem;
		border-radius: 6px;
		overflow-x: auto;
		margin-bottom: 1em;
		line-height: 1.5;
	}

	pre code {
		background: none;
		border: none;
		padding: 0;
		font-size: inherit;
	}

	/* Blockquotes */
	blockquote {
		border-left: 3px solid var(--color-gray-200);
		padding-left: 1rem;
		margin: 1.5em 0;
		font-style: italic;
		color: var(--color-gray-600);
	}

	/* Tables */
	table {
		width: 100%;
		border-collapse: collapse;
		margin-bottom: 1em;
	}

	th, td {
		border: 1px solid var(--color-gray-200);
		padding: 0.5rem;
		text-align: left;
	}

	th {
		background-color: var(--color-gray-50);
		font-weight: 600;
	}

	/* Horizontal rule */
	hr {
		border: none;
		border-top: 1px solid var(--color-gray-200);
		margin: 2rem 0;
	}
</style>
